<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eCommerce.MAUI.Views.GlobalManagerView"
             Title="GlobalManagerView">
    <VerticalStackLayout>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0"
                   Text="Tax Rate (%) :"
                   />
            <Entry Grid.Column="1"
                   Text="{Binding TaxRatePercent}"
                   />
            

        </Grid>
        <Button
            Text="Go Back"
            Clicked="GoBackClicked"/>
    </VerticalStackLayout>
</ContentPage>