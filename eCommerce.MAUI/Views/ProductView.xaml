<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eCommerce.MAUI.Views.ProductView"
             Title="ProductView">
    
    
    <VerticalStackLayout>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Text="Name"/>
            <Label Grid.Row="0" Grid.Column="1" Text="Price"/>
            <Label Grid.Row="0" Grid.Column="2" Text="Description"/>
            <Label Grid.Row="0" Grid.Column="3" Text="Quantity"/>

            <Entry Grid.Row="1" Grid.Column="0" Text="{Binding }"/>
            <Entry Grid.Row="1" Grid.Column="1"/>
            <Entry Grid.Row="1" Grid.Column="2"/>
            <Entry Grid.Row="1" Grid.Column="3"/>
        </Grid>
        <Button Text="Ok" Clicked="OkClicked"/>
        <Button Text="Cancel" Clicked="CancelClicked"/>
    </VerticalStackLayout>
</ContentPage>